<div class="container">
  <p id="notice"><%= notice %></p>
  <h2><%= @product.title %></h2>
  <%- if @product.image.present? %>
  <%= image_tag @product.image , class: "img-style"%>
  <% end %>
<p>
  <strong>Descreption:</strong>
  <%= @product.descreption %>
</p>



<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>  
</div>
<%- if !@str.nil? %>
  <%- a=  JSON.parse(@str) %>
    <%- a.each do |recmnd_data| %>
    <%- if !recmnd_data.nil? %>
      <a href="<%= recmnd_data['link'] %>">
      <div class="col-lg-3 employe-tab">
        <div class="employ-header">
          <h4 class="text-center">
            <%= recmnd_data['name'] if recmnd_data['name'] %>
          </h4>
          <hr>
          <div class="employ-pic-area">
          <%- if recmnd_data['image_link'] %>
            <%= image_tag recmnd_data['image_link'] , class: "employ-pic" %>
            <% end %>
          </div>
          <hr>
          <h5 class="text-center">
          </h5>
          <hr>
          <h5 class="text-center">
            Price: <%= recmnd_data['price'] if recmnd_data['price'] %>
          </h5>
        </div>
      </div>
      <% end %> 
  </a>
<% end %>
<% end %>






